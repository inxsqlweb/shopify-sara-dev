{{ 'inx-styles-account.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .account-box a {  
    color: {{ section.settings.acct-icon-color | default: "var(--brand-color-primary)" }}
  }
{%- endstyle -%}

<section class="page-width">
  <div class="container-fluid">
      <div class=row>
         <div class="col-3 col-md-2 col-lg-1 text-center">
            <i class="fa-solid fa-user fa-4x"></i>
        </div>

        <div class="col-9 col-md-10 col-lg-11">
            <ul class="m-0 no-bullets">
                <li>CustomerInfo.name</li>
                <li>CustomerInfo.email</li>
                <li>CustomerInfo.company</li>
                {% # <li><i class="fa-solid fa-lock icon-r"></i><a href="#" class="underlined-link">Change Password</a></li>%}
            </ul>
        </div>
      </div>
  </div>

  <div class="container-fluid">
      <div class="row align-items-stretch">
          <div class="col-6 col-md-4 col-lg-3 text-center account-box">
              <div class="box">
                  <a href="/pages/orders" alt="Order Lookup">
                      <i class="fa-solid fa-search account-icon"></i>
                      <span class="account-title">Orders</span>
                  </a>
                  <span class="account-desc"> View Open & Closed Orders</span>
              </div>
          </div>

          <div class="col-6 col-md-4 col-lg-3 text-center account-box">
              <div class="box">
                  <a href="" alt="Blanket Order Lookup">
                      <i class="fa-solid fa-file-export account-icon"></i>
                      <span class="account-title">Blanket Orders</span>
                  </a>
                  <span class="account-desc"> View Open & Closed Blanket Orders</span>
              </div>
          </div>

          <div class="col-6 col-md-4 col-lg-3 text-center account-box">
              <div class="box">
                  <a href="" alt="Quote Lookup">
                      <i class="fa-solid fa-file-signature account-icon"></i>
                      <span class="account-title">Quotes</span>
                  </a>
                  <span class="account-desc"> View Open Quotes</span>
              </div>
          </div>

          <div class="col-6 col-md-4 col-lg-3 text-center account-box">
              <div class="box">
                  <a href="" alt="RMA Lookup">
                      <i class="fa-solid fa-reply account-icon"></i>
                      <span class="account-title">Return Request (RMA)</span>
                  </a>
                  <span class="account-desc"> View Open Orders Eligible for RMA</span>
              </div>
          </div>

         <div class="col-6 col-md-4 col-lg-3 text-center account-box">
            <div class="box">
                <a href="" alt="View Open Invoices">
                    <i class="fa-solid fa-file-invoice-dollar account-icon"></i>
                    <span class="account-title">Open Invoices</span>
                </a>
                <span class="account-desc"> View & Print Unpaid Invoices</span>
            </div>
        </div>

         <div class="col-6 col-md-4 col-lg-3 text-center account-box">
            <div class="box">
                <a href="" alt="View Invoice History">
                    <i class="fa-solid fa-history account-icon"></i>
                    <span class="account-title">Invoice History</span>
                </a>
                <span class="account-desc"> View Invoice & Payment History</span>
            </div>
        </div>   
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Account Dashboard",
    "settings": [      
      {
        "type": "color",
        "id": "acct-icon-color",
        "label": "Icon Color"
      }
    ]
  }
{% endschema %}