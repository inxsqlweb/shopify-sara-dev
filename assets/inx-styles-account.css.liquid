@import url('https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap');

/*acct Dashboard*/
.acct-box {
  margin-top: 1em;
  margin-bottom: 1em; }

.acct-box .box {
  height: 100%;
  box-shadow: 1px 1px 3px lightgray; }

.acct-box a {
    display: block; 
    text-decoration: none;
    color: {{ settings.acct_dashboard_link_color | default: "var(--brand-color-primary)" }};
}

.acct-box:hover .box  {
  box-shadow: 1px 1px 3px gray;
}

.acct-box .acct-icon {
  font-size: 2.5em; }

  .acct-nav-link {
    display: block;
    font-size: var(--text-xs);
    margin-bottom: 1em;
    color: {{ settings.acct_dashboard_link_color | default: "var(--brand-color-primary)" }};
  }

.acct-title {
  display: block;
  font-size: var(--text-md);
  font-weight: bold; }

.acct-desc {
  display: block;
  font-size: var(--text-xs);
  margin-top: 0.5em;
}

.acct-label {  
  color: #555555;
  font-weight: bolder;
  font-family: {{ settings.acct_data_labels }}, sans-serif;
  margin-right: 0.35em;  
}

.acct-table .acct-label {
  @media screen and (min-width: 1200px) {
    display: none;
  }
}

.acct-order-num {
  font-size: var(--text-md);
  font-weight: bold;
  text-decoration: none;
  color: {{ settings.acct_dashboard_link_color | default: "var(--brand-color-primary)" }};
}

.acct-order-num:hover {
  text-decoration: underline;
}

.acct-table > div {
  overflow: hidden;
}

.acct-table-header {
  font-weight: bold;
  font-size: 1.15em;
  border-bottom: 2px solid {{ settings.acct_dashboard_link_color | default: "var(--brand-color-primary)" }};
  margin-bottom: 5px;
}

.acct-date {
  @media screen and (min-width: 1200px) {    
    flex: 0 0 110px;
  }
}

.acct-type {
  @media screen and (min-width: 1200px) {    
    flex: 1 0 auto;
  }

  @media screen and (min-width: 1400px) {    
    flex: 0 0 150px;
  }
}

.acct-col-xl-120 {
  @media screen and (min-width: 1200px) {    
    flex: 0 0 120px;
  }
}

.acct-col-xl-150 {
  @media screen and (min-width: 1200px) {    
    flex: 0 0 150px;
  }
}